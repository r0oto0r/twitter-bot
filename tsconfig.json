{
	"compilerOptions": {
		"outDir": "out",
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": ["es5", "es6", "dom"],
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*"
    ]
}
